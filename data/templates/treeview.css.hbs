:root {
  --folder-icon-height: 18px;
  --folder-icon-width: 18px;
  --color-border: #000;
}

.hljs-folder {
  position: relative;
  vertical-align: baseline;
  display: inline-block;
  height: var(--folder-icon-height);
}

.hljs-folder::before {
  top: 4px;
  content: "";
  width: var(--folder-icon-width);
  height: var(--folder-icon-height);
  /* margin-top: 0px; */
  margin-right: 3px;
  margin-left: -5px;
  position: relative;
  display: inline-block;
  background-size: var(--folder-icon-height);
  background-repeat: no-repeat;
  background-image: url('data:image/svg+xml;base64,PHN2ZyB2aWV3Qm94PSIwIDAgMjQgMjQiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTE5IDIwSDRjLTEuMTEgMC0yLS45LTItMlY2YzAtMS4xMS44OS0yIDItMmg2bDIgMmg3YTIgMiAwIDAgMSAyIDJINHYxMGwyLjE0LThoMTcuMDdsLTIuMjggOC41Yy0uMjMuODctMS4wMSAxLjUtMS45MyAxLjV6IiBmaWxsPSIjOTBhNGFlIiAvPjwvc3ZnPg==');
}

.hljs-hiddenfile,
.hljs-file {
  position: relative;
  vertical-align: baseline;
  display: inline-block;
  height: 16px;
}

.hljs-file::before,
.hljs-hiddenfile::before {
  top: 4px;
  content: "";
  width: var(--folder-icon-width);
  height: var(--folder-icon-height);
  /* margin-top: 0px; */
  margin-right: 3px;
  margin-left: -5px;
  position: relative;
  display: inline-block;
  background-size: 16px;
  background-repeat: no-repeat;
}

.hljs-hiddenfile {
  opacity: 0.6;
}

.hljs-tvline {
  margin-left: 6px;
  position: absolute;
  text-indent: -99em;
  padding-bottom: 8px;
  vertical-align: sub;
  display: inline-block;
  border-left: 1px solid var(--color-border);
}

.hljs-tvline-hash {
  display: inline-block;
  padding-right: 13px;
  text-indent: -99em;
  vertical-align: sub;
}

.hljs-folder-branch {
  width: 8px;
  height: 8px;
  margin-top: -1px;
  margin-left: 6px;
  text-indent: -99em;
  position: relative;
  vertical-align: sub;
  display: inline-block;
  border-bottom: 1px solid var(--color-border);
}

.hljs-folder-branch.win {
  width: 14px;
  margin-right: 2px;
}

.hljs-folder-last-branch {
  height: 7px;
  width: 7px;
  margin-left: 6px;
  text-indent: -99em;
  position: relative;
  vertical-align: sub;
  display: inline-block;
  border-bottom: 1px solid var(--color-border);
  border-left: 1px solid var(--color-border);
}

.hljs-folder-last-branch.win {
  width: 13px;
  margin-right: 2px;
}
/* File */
{{#each cssFileRules}}
.hljs-file.{{this.role}}::before {
  background-image: url('{{{this.iconDataUri}}}');
}

{{/each}}
/* Folders */
{{#each cssFolderRules}}

.hljs-folder.{{this.role}}::before {
  background-image: url('{{{this.iconDataUri}}}');
}
{{/each}}
